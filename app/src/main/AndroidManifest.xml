<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.kevinrschultz.weatherbuoy"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.kevinrschultz.weatherbuoy.WeatherBuoyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.BuoyListingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BuoyDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.BuoyListingActivity"/>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.BuoyListingActivity"/>

    </application>

</manifest>
